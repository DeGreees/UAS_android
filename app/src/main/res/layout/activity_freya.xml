<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".freya">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namplgliquid2"
        android:hint="Nama"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namplgliquid2"
        android:id="@+id/alamatplgliquid2"
        android:hint="Alamat"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jmlbrgliquid2"
        android:layout_below="@id/alamatplgliquid2"
        android:hint="Barang"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editpesanliquid2"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_below="@id/jmlbrgliquid2"
        android:gravity="top|left"
        android:hint="Tuliskan Pesan di sini" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editpesanliquid2"
        android:id="@+id/btnkirimliquid2"
        android:hint="KIRIM"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</RelativeLayout>